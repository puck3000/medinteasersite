@font-face {
    font-family: 'SuisseIntl';
    src: url('~/fonts/SuisseIntl-Regular.otf');
    font-style: normal;
    font-weight: normal;
}

@font-face {
    font-family: 'SuisseIntl';
    src: url('~/fonts/SuisseIntl-SemiBold.otf');
    font-style: bold;
    font-weight: bold;
}

body {
    font-family: 'SuisseIntl', 'Helvetica Neue', Helvetica, Arial, sans-serif;
}

h1, h2, h3, h4, h5, h6, p {
    margin: 0;
}

h1, h2, h3 {
    text-transform: uppercase;
    font-family: 'Futura', 'Helvetica Neue', Helvetica, Arial, sans-serif;
    font-size: 30px;
    font-size: 1.875rem;
    font-weight: 500;
    margin: 0;
    margin-bottom: 1rem;
    line-height: 1;
}

p {
    font-family: 'SuisseIntl', 'Helvetica Neue', Helvetica, Arial, sans-serif;
    font-size: 20px;
    font-size: 1.25rem;
    line-height: 1.2;
}

a {
    color: inherit;

    &:hover {
        color: blue;
    }
}